{% extends 'base.html.twig' %}

{% block title %} Регистрация {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('form.css', 'css') }}">
{% endblock %}

{% block body %}
    <div class="form-wrapper">
        <h1>Добавление студента</h1>
        <form action="" method="post">
            <div class="form-item">
                <label for="firstname"></label>
                <input type="text" name="firstname" required="required" placeholder="Имя">
            </div>
            <div class="form-item">
                <label for="secondname"></label>
                <input type="text" name="secondname" required="required" placeholder="Фамилия">
            </div>
            <div class="form-item">
                <label for="thirdname"></label>
                <input type="text" name="thirdname" required="required" placeholder="Отчество">
            </div>
            <div class="form-item">
                <label for="email"></label>
                <input type="text" name="email" required="required" placeholder="email">
            </div>
            <div class="form-item">
                <label for="password"></label>
                <input type="password" name="password" required="required" placeholder="Пароль">
            </div>
            <div class="button-panel">
                <input type="submit" class="button" title="Добавить" value="Добавить">
            </div>
        </form>
    </div>
{% endblock %}